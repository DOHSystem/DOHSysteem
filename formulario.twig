{% import "/block/base.twig" as base %}

<div class="ui form">
    <div class="two fields">
        <div class="field">
            {{ base.input({
                disabled,
                name: "oc",
                label: "Oficial de Comando",
                placeholder: "Digite o nickname do oficial de comando",
                type: "text",
                value: item.oc ?? "",
                required: true
            }) }}
        </div>

        <div class="field">
            {{ base.input({
                disabled,
                name: "militar_nick",
                label: "Nick do Militar",
                placeholder: "Digite o nickname do militar",
                type: "text",
                value: item.militar_nick ?? "",
                required: true
            }) }}
        </div>
    </div>

    <div class="two fields">
        <div class="field">
            <label for="motivo_pendencia">Motivo da Pendência</label>
            <select name="motivo_pendencia" id="motivo_pendencia" class="ui fluid dropdown" required>
                <option value="" disabled selected>Selecione o motivo</option>
                <option value="sem_caixas" {% if item.motivo_pendencia == 'sem_caixas' %}selected{% endif %}>Sem Caixas</option>
                <option value="sem_trocas" {% if item.motivo_pendencia == 'sem_trocas' %}selected{% endif %}>Sem Trocas</option>
                <option value="sem_treinos" {% if item.motivo_pendencia == 'sem_treinos' %}selected{% endif %}>Sem Treinos</option>
            </select>
        </div>

        <div class="field">
            {{ base.input({
                name: "pendencia_horario",
                label: "Horário da Pendência",
                type: "time",
                placeholder: "Hora:Minuto Ex: 10:00",
                value: item.pendencia_horario ?? "",
                required: true
            }) }}
        </div>
    </div>

    <div class="field">
        {{ base.input({
            name: "valor_moedas",
            label: "Valor a Receber (Moedas)",
            type: "number",
            placeholder: "Ex: 100",
            value: item.valor_moedas ?? "",
            min: 0,
            required: true
        }) }}
    </div>

    {% if page == "editar" %}
        <!-- Status -->
        <div class="field">
            <label for="status">Status</label>
            <div class="ui fluid selection dropdown">
                <input type="hidden" name="status" id="status" value="{{ item.status ?? '' }}" required>
                <i class="dropdown icon"></i>
                <div class="default text">Selecione o status</div>
                <div class="menu">
                    <div class="item" data-value="Pendente">Pagamento em Verificação</div>
                    <div class="item" data-value="Aprovado">Pagamento Aprovado</div>
                    <div class="item" data-value="Pago">Pagamento Realizado</div>
                    <div class="item" data-value="Cancelado">Pagamento Cancelado</div>
                    <div class="item" data-value="Oculto">Pagamento Oculto</div>
                </div>
            </div>
        </div>
    {% endif %}
</div>