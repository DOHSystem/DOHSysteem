{% import "/block/base.twig" as base %}

{{ base.header('LISTA DE PENDÊNCIA - O.C', 'list', '') }}

{# Begin Lista #}
<table class="ui table">
  {{ thead('ID', 'Aplicador', 'Data', 'Status', 'Ações') }}
  {% if lista is not empty %}
    {% for item in lista %}
      <tr>
        {{ td(item.id) }}
        {{ td(item.aplicador) }}
        {{ td(item.data ? item.data|date('d/m/Y') : '-') }}
        {{ td(base.status(item.status)) }}
        {{ td(base.button('ver', link ~ '/ver/' ~ item.id)) }}
      </tr>
    {% endfor %}
  {% else %}
    <tr>
      <td class="text-center" colspan="{{ atividade.id == 2 ? 7 : 8 }}">
        Nenhum resultado encontrado
      </td>
    </tr>
  {% endif %}
</table>
{# End Lista #}